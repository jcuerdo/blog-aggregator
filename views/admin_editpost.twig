{% extends 'layout/admin.twig' %}
{% block content %}
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            height: "100%",
            menubar: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table contextmenu paste code'
            ],
            toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image code',
            content_css: '//www.tinymce.com/css/codepen.min.css'
        });
    </script>
    <div id="main-content" class="row">
        <h2>Admin - New post</h2>
        {% include 'admin_menu.twig'%}
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h3>New post</h3>
            <form action="{{ path('savePost') }}" method="post">

                    <input type="text" class="form-control" name="title" value="{{ post.title }}" />
                    <input type="hidden" class="form-control" name="slug" value="{{ post.slag }}" />

                <br>
                <div class="input-group">
                    <textarea  class="form-control" name="content">{{ post.content | raw }}</textarea>
                </div>
                <br>
                <div class="input-group">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </span>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block left %}
{% endblock %}