{% extends 'layout/list.twig' %}
{% block content %}
    <div id="main-content" class="row">
        <h2>Admin</h2>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h3>New post</h3>
            <form action="addPost">
                <div class="input-group">
                    <input type="text" class="form-control" name="title" value="" />
                </div>
                <br>
                <div class="input-group">
                    <textarea cols="50" rows="10" class="form-control" name="content"></textarea>
                </div>
                <br>
                <div class="input-group">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary" value="Publish" />
                </span>
                </div>
            </form>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <h3>Rss List</h3>
        <form action="addRss">
            <div class="input-group">
                <input type="text" class="form-control" name="url" value="http://" />
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary" value="Add New" />
                </span>
            </div>
        </form>
        <br>
        <br>
<ul class="list-group">
        {% for rss in rsss %}
        <li class="list-group-item">
                <form action="deleteRss">
                    {{rss}} <input class="btn btn-primary" type="submit" value="Delete" /> <input type="hidden" name="url" value="{{ rss }}" />
                </form>
            </li>
        {% endfor %}
        </ul>
    </div>
    </div>
{% endblock %}
{% block left %}
{% endblock %}