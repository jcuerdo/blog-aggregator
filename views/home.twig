{% extends 'layout/list.twig' %}
{% block content %}
    <div id="main-content" class="row">
        {% for post in posts %}
            <h1><a href="{{post.slag}}">{{post.title}}</a></h1>
            <!-- AddToAny BEGIN -->
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                <a class="a2a_dd" href="https://www.addtoany.com/share?linkurl={{ app.url }}/{{post.slag}}&amp;"></a>
                <a class="a2a_button_facebook"></a>
                <a class="a2a_button_twitter"></a>
                <a class="a2a_button_google_plus"></a>
                <a class="a2a_button_whatsapp"></a>
                <a class="a2a_button_tuenti"></a>
            </div>
            <script>
                var a2a_config = a2a_config || {};
                a2a_config.linkurl = "";
            </script>
            <script async src="https://static.addtoany.com/menu/page.js"></script>
            <!-- AddToAny END -->
            <span><a href="{{post.link}}">Artículo original</a></span>
            <p>{{post.content | raw}}</p>
        {% endfor %}
        {% include 'common/paginator.twig'%}
    </div>
{% endblock %}
{% block left %}
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- Una sola publicación - 2 (andsoyoucode.xyz) -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-6904186947817626"
         data-ad-slot="5918925195"
         data-ad-format="auto"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
{% endblock %}

