{% extends 'layout/list.twig' %}
{% block content %}
    <div id="main-content" class="row">
        {% set postNumber = 1 %}
        {% for post in posts %}
            <div class="post">
            <h2>
                {%if app.request.get('isApp') != '1' %}
                    <a href="{{post.slag}}">{{post.title}}</a>
                {% else %}
                    {{post.title}}
                {% endif %}
            </h2>
            <span>{{post.date | date('d/m/Y')}}</span>
                {% if post.link and post.link != '#' %}
                    <span><a class="original" href="{{post.link}}">{% if app.text_original_post is defined %}{{app.text_original_post}}{%else%}Art√≠culo original{%endif%}</a></span>
                {% endif %}
            <p>{{post.content | raw}}</p>
            {% if postNumber == 1 %}
                {{ app.banner_between_posts|raw  }}
            {% endif %}
            {% set postNumber = postNumber + 1 %}
            </div>
        {% endfor %}
        {% include 'common/paginator.twig'%}
    </div>
{% endblock %}
{% block left %}
    {% include 'common/left.twig' %}

{% endblock %}

